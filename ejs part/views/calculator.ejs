<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator</title>
    <link rel="stylesheet" href="cal.css">
</head>
<body>
    <div class="calculator">
        <div class="calculator__wrap">
            <div id="disp" class="calculator__display">
                0
            </div>
            <div class="calculator__functions">
                <button id="inp" value="clear" class="btn--opaque">AC</button>
                <button id="inp" value="pos-neg" class="btn--opaque">+/-</button>
                <button id="inp%" value="%" class="btn--opaque">%</button>
                <button id="inp/" value="/" class="btn--opaque">/</button>
                <button id="inp7" value="7">7</button>
                <button id="inp8" value="8">8</button>
                <button id="inp9" value="9">9</button>
                <button id="inp*" value="*" class="btn--opaque">*</button>
                <button id="inp4" value="4">4</button>
                <button id="inp5" value="5">5</button>
                <button id="inp6" value="6">6</button>
                <button id="inp-" value="-" class="btn--opaque">-</button>
                <button id="inp1" value="1">1</button>
                <button id="inp2" value="2">2</button>
                <button id="inp3" value="3">3</button>
                <button id="inp+" value="+" class="btn--opaque">+</button>
                <button id="inp0" value="0" class="btn--large">0</button>
                <button id="inp." value=".">.</button>
                <button id="inp=" value="=" class="btn--opaque">=</button>
            </div>
        </div>
    </div>
    <script src="cal.js"></script>
</body>
</html>